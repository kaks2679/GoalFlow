rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin (add your admin emails here)
    function isAdmin() {
      return isSignedIn() && request.auth.token.email in [
        'yourEmail@example.com'  // Replace with your admin email
      ];
    }
    
    // Users collection - users can only read/write their own profile
    match /users/{userId} {
      // Allow read if:
      // 1. User is reading their own profile
      // 2. User is an admin (can read all profiles)
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow write if:
      // 1. User is creating/updating their own profile
      allow write: if isOwner(userId);
      
      // User's goals subcollection
      match /goals/{goalId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's tasks subcollection
      match /tasks/{taskId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's events subcollection
      match /events/{eventId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's notifications subcollection
      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Deny access to all other paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
